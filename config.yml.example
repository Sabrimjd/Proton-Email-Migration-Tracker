# Email Migration Tracker Configuration
# Copy this file to config.yml and customize for your setup

# Your email accounts
emails:
  # Your old email address (the one you're migrating FROM)
  old_address: "your-old-email@gmail.com"

  # Your new email domains (the ones you're migrating TO)
  # Services sending to these domains will be auto-marked as migrated
  new_domains:
    - "yourdomain.com"
    - "example.com"

  # Personal email domains to exclude from tracking
  # These are YOUR domains, not services to migrate
  personal_domains:
    - "gmail.com"
    - "protonmail.com"

# ProtonMail IMAP configuration (direct connection via Proton Bridge)
protonmail:
  # IMAP connection settings (Proton Bridge must be running)
  imap_host: "127.0.0.1"
  imap_port: 1143
  imap_user: "your-email@yourdomain.com"
  imap_password: "YOUR_PROTON_BRIDGE_PASSWORD"

  # Number of recent emails to scan
  email_scan_limit: 5000

# Database configuration
database:
  # Path to SQLite database file
  path: "data/migration.db"

# Server configuration
server:
  # Port for web dashboard
  port: 3000

# Scheduler configuration (automatic email analysis)
scheduler:
  # Enable/disable automatic scheduled scans
  enabled: true
  
  # Cron schedule (when to run automatic scans)
  # Format: "minute hour day month weekday"
  # Examples:
  #   "0 6 * * *"      - Every day at 6:00 AM
  #   "0 */6 * * *"    - Every 6 hours
  #   "*/30 * * * *"   - Every 30 minutes
  #   "0 0 * * 0"      - Every Sunday at midnight
  cron: "0 6 * * *"

